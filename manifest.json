{
  "name": "HeaderCheck",
  "description": "Local security header audit. Runs offline. Made by YvonLabs.",
  "version": "0.3.0",
  "manifest_version": 3,

  "icons": {
    "16": "icons/headercheck16.png",
    "32": "icons/headercheck32.png",
    "48": "icons/headercheck48.png",
    "128": "icons/headercheck128.png"
  },

  "action": {
    "default_title": "HeaderCheck",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/headercheck_toolbar_16.png",
      "32": "icons/headercheck_toolbar_32.png",
      "48": "icons/headercheck_toolbar_48.png"
    }
  },

  "permissions": [
    "activeTab",
    "storage",
    "webRequest"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
